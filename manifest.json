{
  "name": "4000 Days extension",
  "description": "Helps you reduce distractions, apply visual effects to time-wasting sites, and build better habits.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "components/popup/popup.html",
    "default_icon": {
      "16": "images/logo.png",
      "32": "images/logo.png",
      "48": "images/logo.png",
      "128": "images/logo.png"
    }
  },
  "background": {
    "service_worker": "main.js"
  },
  "permissions": ["activeTab", "scripting", "storage", "tabs", "webNavigation"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "web_accessible_resources": [
    {
      "resources": ["distractions/css/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
